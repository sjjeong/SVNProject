<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/MainActivity_entertainment_Lotto"
        android:textSize="60dp" />

    <ListView
        android:id="@+id/lv_lotto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="20dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <TextView
                android:id="@+id/tv_lottos1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:text="1번" />

            <TextView
                android:id="@+id/tv_lottos2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:text="2번" />

            <TextView
                android:id="@+id/tv_lottos3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:text="3번" />

            <TextView
                android:id="@+id/tv_lottos4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:text="4번" />

            <TextView
                android:id="@+id/tv_lottos5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:text="5번" />

            <TextView
                android:id="@+id/tv_lottos6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:text="6번" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_lottos7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7번" />

        <Button
            android:id="@+id/btn_lotto_winCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check win" />
    </LinearLayout>

</LinearLayout>