<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.googry.hancom"
    android:versionCode="2"
    android:versionName="1.0.1" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light.NoActionBar" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.googry.hancom.option.AlltimetableActivity"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.googry.hancom.option.CurriculumActivity"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.googry.hancom.option.OfficeActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.googry.hancom.option.TimetableSettingActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.googry.hancom.professor.ProfessorDetailActivity"
            android:screenOrientation="portrait" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.CALL_PHONE" />

</manifest>