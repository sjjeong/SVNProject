            android:name="com.unicodi.android.unicodi.IntroActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.unicodi.android.unicodi.LoginActivity" >
        </activity>
        <activity android:name="com.unicodi.android.unicodi.MainActivity" >
        </activity>
        <activity android:name="com.unicodi.android.unicodi.TestActivity" >
        </activity>
        <activity android:name="com.unicodi.android.unicodi.RegisterActivity" >
        </activity>
        <activity android:name="com.unicodi.android.unicodi.ProfileModifyActivity" >
        </activity>
        <activity android:name="com.unicodi.android.unicodi.AddClothesActivity" >
        </activity>
        <activity android:name="com.unicodi.android.unicodi.SettingActivity" >
        </activity>
        <activity android:name="com.unicodi.android.unicodi.PasswordChangeActivity" >
        </activity>
        <activity android:name="com.unicodi.android.unicodi.AddNewsfeedActivity" >
        </activity>
        <activity android:name="com.unicodi.android.unicodi.AdviceActivity" >
        </activity>
        <activity android:name="com.unicodi.android.unicodi.MyClosetDetailActivity" >
        </activity>
    </application>

</manifest>